@startuml
'https://plantuml.com/class-diagram

interface Door {
  lock() : void
  unlock() : void
  open() : void
  close() : void
  timeOutCallback() : void
  proximityCallback() : void
}

class Timer {
  register(timeOut : long, door : Door) : void
}

class Sensor {
  register(door : Door) : void
  isPersonClose() : boolean
}

class TimedDoor implements Door {
  - static TIME_OUT : int
  - _locked : boolean
  - _opened : boolean
  TimedDoor(timer : Timer)
  lock() : void
  unlock() : void
  open() : void
  close() : void
  timeOutCallback() : void
  proximityCallback() : void
}

class SensingDoor implements Door {
  - _locked : boolean
  - _opened : boolean
  SensingDoor(sensor : Sensor)
  lock() : void
  unlock() : void
  open() : void
  close() : void
  timeOutCallback() : void
  proximityCallback() : void
}

TimedDoor --> Timer
SensingDoor --> Sensor

@enduml